#!/bin/zsh

echo "Hostname: $(hostname)"
echo "Time:     $(date)"

#HD check
function checkHDSpace(){
	#HD space left
	echo "==={ HD }===\n"
	df -h | grep /dev
	echo -e "\n\n"
}

checkHDSpace

if (curl -s --unix-socket /var/run/docker.sock http/_ping 2>&1 >/dev/null); then
       dockerStatus "exited"
       dockerStatus
fi
